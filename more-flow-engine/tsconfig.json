{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "declaration": true,
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ]
}
